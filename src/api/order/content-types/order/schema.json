{
  "kind": "collectionType",
  "collectionName": "orders",
  "info": {
    "singularName": "order",
    "pluralName": "orders",
    "displayName": "Order",
    "description": "Customer orders"
  },
  "options": {
    "draftAndPublish": false
  },
  "attributes": {
    "orderNumber": {
      "type": "string",
      "unique": true,
      "required": true
    },
    "customerName": {
      "type": "string",
      "required": true
    },
    "customerEmail": {
      "type": "email",
      "required": true
    },
    "customerPhone": {
      "type": "string"
    },
    "shippingAddress": {
      "type": "json",
      "required": true
    },
    "billingAddress": {
      "type": "json"
    },
    "items": {
      "type": "json",
      "required": true
    },
    "subtotal": {
      "type": "decimal",
      "required": true,
      "min": 0
    },
    "shippingCost": {
      "type": "decimal",
      "default": 0,
      "min": 0
    },
    "tax": {
      "type": "decimal",
      "default": 0,
      "min": 0
    },
    "total": {
      "type": "decimal",
      "required": true,
      "min": 0
    },
    "paymentMethod": {
      "type": "string",
      "required": true
    },
    "paymentStatus": {
      "type": "enumeration",
      "enum": ["pending", "paid", "failed", "refunded"],
      "default": "pending",
      "required": true
    },
    "orderStatus": {
      "type": "enumeration",
      "enum": ["pending", "confirmed", "processing", "shipped", "delivered", "cancelled"],
      "default": "pending",
      "required": true
    },
    "notes": {
      "type": "text"
    },
    "adminNotes": {
      "type": "text"
    },
    "placedAt": {
      "type": "datetime",
      "required": true
    },
    "userId": {
      "type": "string"
    },
    "source": {
      "type": "string",
      "default": "website"
    }
  }
}

